extends layout

block content
  .container
    //- Header / Navigation
    header.header
      nav.navbar
        .logo LOGO
        ul.nav-links
          li: a(href='/dashboard') DASHBOARD
          li: a(href='/calendar') EVENT CALENDAR
          li: a(href='/events') UPCOMING EVENTS
          li: a(href='/courses') COURSES
          li: a(href='#') MESSAGING          
          li: a(href='#') MATCHMAKING

    //- Main Welcome Section
    section.main-content
      .welcome-box
        h1 Welcome to ScholarsUnited
        p Find study buddies, collaborate, and manage your learning experience.
        button.btn.btn-primary Get Started

    //- Community Profiles Section
    section.profiles
      h2 Our Community
      .card-container
        each item in [1, 2, 3, 4, 5]
          .profile-card
            //- Example profile picture (replace with dynamic image if available)
            .profile-pic(style="background-image: url('/images/profile-placeholder.png')")
            .profile-info
              h3 User #{item}
              p A brief bio or interests.
              button.btn.btn-secondary View Profile
