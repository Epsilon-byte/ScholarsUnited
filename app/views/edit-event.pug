extends layout

block content
  .container
    .edit-event-card
      h2.edit-event-title ‚úèÔ∏è Edit Event

      form(method="POST", action=`/events/edit/${event.EventID}`)
        .form-group
          label(for='title') Title:
          input(type='text', name='title', id='title', value=event.Title required)

        .form-group
          label(for='description') Description:
          textarea(name='description', id='description')= event.Description

        .form-group
          label(for='date') Date:
          input(type='date', name='date', id='date', value=event.Date)

        .form-group
          label(for='time') Time:
          input(type='time', name='time', id='time', value=event.Time)

        .form-group
          label(for='location') Location:
          input(type='text', name='location', id='location', value=event.Location)

        .form-buttons
          button.btn.btn-info(type='submit') üíæ Save Changes
          a.btn.btn-secondary(href=`/events/${event.EventID}`) Cancel
