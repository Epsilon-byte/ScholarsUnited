extends layout

block content
  .container
    //- Header / Navigation
    header.header
      nav.navbar
        .logo LOGO
        ul.nav-links
          li: a(href='/') MATCHMAKING
          li: a(href='/calendar') CALENDAR
          li: a(href='/events') EVENTS
          li: a(href='/courses') COURSES
          li: a(href='/messaging') MESSAGING
          li: a(href='/dashboard') DASHBOARD

    //- Courses Section
    section.main-content
      .course-box
        h1 Available Courses
        p Explore and manage your courses with ease.

    //- Course Cards
    section.course-list-section
      .card-container#course-list
        each course in courses
          .profile-card
            .profile-info
              h3= course.CourseName
              a(href=`/courses/${course.CourseID}` class='btn btn-primary') View Course

    //- No Courses Available Message
    if !courses || courses.length === 0
      section.course-list-section
        p No courses available at the moment.