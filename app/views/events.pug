extends layout

block content
  .container
    header.header
      nav.navbar
        .logo LOGO
        ul.nav-links
          li: a(href='/') MATCHMAKING
          li: a(href='/calendar') CALENDAR
          li: a(href='/events') EVENTS
          li: a(href='/courses') COURSES
          li: a(href='/messaging') MESSAGING
          li: a(href='/dashboard') DASHBOARD

    //- Events Section
    section.events-section
      h2 Upcoming Events
      a(href='/events/create' class='btn btn-primary create-event-btn') Create Event

      //- Event Listings
      if events && events.length
        .event-list
          each event in events
            .event-box
              .event-header
                h3= event.name
                span.event-date= event.date + " at " + event.time
              .event-location
                p Location: #{event.location || 'Not specified'}
              .event-actions
                a(href=`/events/${event.id}` class='btn btn-secondary') View Details
      else
        p No upcoming events found.

