extends layout

block content
  h1 Users

  ul
    each user in users
      li
        strong= user.name
        p= "Interests: " + user.interests
        a(href=`/users/${user.id}`) View Profile
        
        form(action=`/users/${user.id}/delete` method="POST" style="display:inline")
          button(type="submit" onclick="return confirm('Are you sure you want to delete this profile?')") Delete Profile
