extends layout

block content
  .container
    h1 Profile Overview

    // âœ… Top navigation: Tabs + Back to Dashboard
    .tab-bar
      .tabs
        button.tab-button.active(type='button', data-tab='info') Your Info
        button.tab-button(type='button', data-tab='edit') Edit Profile
        button.tab-button(type='button', data-tab='password') Reset Password
        button.tab-button(type='button', data-tab='delete') Danger Zone

      a.btn.btn-secondary.dashboard-link(href='/dashboard') â† Back to Dashboard

    // âœ… Info Tab
    .tab-content#info.active
      if userDetails
        .profile-card
          h2.user-name #{userDetails.FullName || 'Not provided'}
          p.user-email ğŸ“§ #{userDetails.Email || 'Not provided'}
          ul.user-details
            li ğŸ·ï¸ Hobbies: #{userDetails.Hobbies || 'Not provided'}
            li ğŸ“ Academic Info: #{userDetails.AcademicInfo || 'Not provided'}
