extends layout

block content
  .container
    // Course Header
    .course-header
      a.btn.btn-secondary(href="/courses") ← Back to All Courses
      h1.mt-3= course.CourseName

    // Course Details Grid
    .course-details
      .detail-card
        h4 Course Info
        ul
          li
            strong ID: 
            | #{course.CourseID}
          li
            strong Name: 
            | #{course.CourseName}
          li
            strong Enrolled Users: 
            | #{enrolledUsers.length}
