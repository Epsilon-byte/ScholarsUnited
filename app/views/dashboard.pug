extends layout

block content
  .container
    h1 Dashboard
    h2 Upcoming Events
    if upcomingEvents && Array.isArray(upcomingEvents) && upcomingEvents.length
      ul
        each event in upcomingEvents
          li
            strong= event.name
            p= event.date + " at " + event.time
            a(href=`/events/${event.id}`) View Details
    else
      p No upcoming events.

    h2 Notifications
    if notifications && Array.isArray(notifications) && notifications.length
      ul
        each notification in notifications
          li= notification
    else
      p No notifications.
